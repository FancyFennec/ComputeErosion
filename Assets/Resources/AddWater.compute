#pragma kernel CSMain

RWTexture2D<float2> water;

[numthreads(8, 8, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float wX = water[id.xy].x;
    float wY = water[id.xy].y;
    if (length(int2(id.xy) - int2(512, 512)) < 50.0) {
        wX = wX + 0.000001;
    }
    water[id.xy] = float2(wX, wY);
}

